<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tolls="http://schemas.android.com/tools"
    android:layout_margin="15dp"
    app:cardCornerRadius="20dp"
    app:strokeWidth="1dp"
    android:background="@drawable/bgcolor"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/tv_site_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tolls:text="Site Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ic_delete"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_ttnumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tolls:text="TT Number"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ic_delete"
            app:layout_constraintTop_toBottomOf="@+id/tv_site_name"
            />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tolls:text="Status"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ic_delete"
            app:layout_constraintTop_toBottomOf="@+id/tv_ttnumber"
            />

        <ImageView
            android:id="@+id/ic_delete"
            android:layout_width="51dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>